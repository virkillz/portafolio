  <div class="panel panel-default">
      <div class="panel-body">
<%= form_for @changeset, @action,[multipart: true], fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :fullname, class: "control-label" %>
    <%= text_input f, :fullname, class: "form-control" %>
    <%= error_tag f, :fullname %>
  </div>

  <div class="form-group">
    <%= label f, :username, class: "control-label" %>
    <%= text_input f, :username, class: "form-control" %>
    <%= error_tag f, :username %>
  </div>

  <div class="form-group">
    <%= label f, :password, class: "control-label" %>
    <%= password_input f, :password, class: "form-control" %>
    <%= error_tag f, :password %>
  </div>

  <div class="form-group">
    <%= label f, :repassword, class: "control-label" %>
    <%= password_input f, :repassword, class: "form-control" %>
    <%= error_tag f, :repassword %>
  </div>  


  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
    <%= link "Cancel", to: user_path(@conn, :index), class: "btn btn-warning" %>    
  </div>
<% end %>

</div>
</div>
